<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:clickable="true"
    android:elevation="4dp"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/parent_tile_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo_id"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/profile_icon_menu"
            android:tintMode="add"
            app:civ_border_color="#f2f2f2"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/text_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/logo_id"
            android:maxLines="1"
            android:gravity="left"
            android:text="element Head"
            android:textAllCaps="true"
            android:textColor="#808080"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_header"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/logo_id"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="element sub"
            android:textColor="#727272"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_sub"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="Date: 12-06-2019"
            android:textColor="#808080"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_date"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_chevron_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/logo_id"
            android:background="#999999"
            android:visibility="gone" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>